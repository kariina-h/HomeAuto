<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/jquery.mobile-1.4.5.min.css" />
  <script src="/js/jquery.min.js"></script>
  <script src="/js/jquery.mobile-1.4.5.min.js"></script>
  <script src="/js/home_auto.js"></script>
</head>

<body>
<div data-role="page">
  <div data-role="header">
    <h1><%= title %></h1>
  </div><!-- /header -->

  <div data-role="content">
    <form>
      <% dimmers.forEach(function(d) { %>
        <label for="<%= d.id %>"><%= d.name %></label>
        <input type="range" class="dimmer" name="<%= d.id %>" id="<%= d.id %>" value="<%= d.value %>" min="0" max="100">
      <% }); %>

      <% switches.forEach(function(s) { %>
          <label for="<%= s.id %>"><%= s.name %></label>
          <input type="checkbox" class="switch" id="<%= s.id %>" <%= s.status ? 'checked' : '' %> data-role="flipswitch">
      <% }); %>
    </form>
  </div><!-- /content -->

</div><!-- /page -->

</body>
</html>
